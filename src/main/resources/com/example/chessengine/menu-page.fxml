<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vBox" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chessengine.MenuController">
    <GridPane fx:id="menuGrid" alignment="CENTER" vgap="10.0">
        <rowConstraints>
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints />
        </columnConstraints>
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button fx:id="multiplayerButton" maxHeight="80.0" maxWidth="400" minHeight="8.0" mnemonicParsing="false" onAction="#setGameToMultiplayer" prefHeight="80.0" prefWidth="400" text="local multiplayer" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <font>
            <Font size="20.0" />
         </font></Button>
        <Button fx:id="engineButton" maxHeight="80.0" maxWidth="400" minHeight="8.0" mnemonicParsing="false" onAction="#setGameToEngine" prefHeight="80.0" prefWidth="400" text="bot" GridPane.halignment="CENTER" GridPane.rowIndex="2">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Label text="Choose game mode" GridPane.halignment="CENTER">
         <font>
            <Font name="Cascadia Code Regular" size="20.0" />
         </font>
      </Label>
    </GridPane>
</VBox>
